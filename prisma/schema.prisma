// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Interest{
  literature
  design
  IT
  financial
  entertainment
  language
  entrepreneurship
  employment
}

enum Provider{
  kakao
  naver
  google
}

model User {
  id            String    @id @unique @default(uuid())
  email         String    @unique
  provider      Provider  
  name          String    @db.VarChar(5)
  nickname      String    @db.VarChar(10) @unique
  phone         String    @db.VarChar(13) 
  profileImage  String 
  major         String
  interest      Interest 
  keyword      UserKeyword[]
}

model Keyword {
  id        String @id @unique @default(uuid())
  keyword   String @unique
  users     UserKeyword[]
}

model UserKeyword {
  userId    String
  keywordId String
  user      User   @relation(fields: [userId], references: [id])
  keyword   Keyword @relation(fields: [keywordId], references: [id])
  @@id([userId, keywordId])
}

model Competition {
  id                    String @id @unique @default(uuid())
  Dday                  String
  title                 String
  view                  String
  mainImage             String @db.LongText
  organization          String
  enterprise            String
  target                String
  applicationPeriod     String
  participationPeriod   String
  personnel             String
  region                String
  preferentialTreatment String
  homePage              String @db.LongText
  detail                String @db.LongText
}
